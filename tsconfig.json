{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "outDir": "build",
    "sourceMap": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "lib": ["dom", "es2015", "es2016"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "noImplicitThis": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "rootDir": "src",
    "allowJs": true
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "node_modules",
    "**/node_modules/*",
    "android",
    "ios",
    "build",
    "node_modules"
  ]
}
